mixin circle-perc(options)
    -
        let percent = options.percent
        
    .c1
        <svg class="cc" width=100 height=100  percent="#{percent}"> 
        <use xlink:href="#circle-percent">
        </svg>
    



mixin circle-pie(options)
    -
        let percent = options.percent
    .c1
        <svg width=100 height=100> 
        <use xlink:href="#circle-pie">
        </svg>
    

<svg  width=100 height=100 display="none" percent=777>
    <symbol id="circle-percent">
        <circle class="circle" cx="50%" cy="50%" r="45" style="stroke-dasharray: #{percent};"/>
        <text id="text" class="circle__text" x="25%" y="60%">
    </symbol>
    
    <symbol id="circle-pie" percent="[100, 65, 45, 15]">
        <circle class="circle-pie" cx="50%" cy="50%" r="39" style="stroke-dasharray: calc(100*283/100) 300; stroke:#e5e5e5;"/>
        <circle class="circle-pie" cx="50%" cy="50%" r="39" style="stroke-dasharray: calc(65*283/100) 300; stroke:#4eb7a8;"/>
        <circle class="circle-pie" cx="50%" cy="50%" r="39" style="stroke-dasharray: calc(45*283/100) 300; stroke:#e75735;"/>
        <circle class="circle-pie" cx="50%" cy="50%" r="39" style="stroke-dasharray: calc(15*283/100) 300; stroke:#747474;"/>
    </symbol>
</svg>       

+circle-perc({percent: 0})
+circle-perc({percent: 38})
+circle-perc({percent: 62})
+circle-perc({percent: 89})



+circle-pie({percents: [100, 65, 45, 15]})

