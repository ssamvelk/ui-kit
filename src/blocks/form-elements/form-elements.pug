mixin form-elem__input(options)
    -   var placeHolder = (options.type == 'text') ? "Your Name": "Your Email"
    -   var className = ''
    -   var elType = options.type
    -   var check = (options.isChecked) ? 'true': 'false'
    -   var labelClassName = 'check__label ' + (options.isChecked? 'check__label--active' : 'check__label--disable')
    .form-elem__inp-wrap
        if (options.type == 'checkbox')
            input(class='form-elem__checkbox' type='checkbox' checked=check)
            label(class=labelClassName for="form-elem__checkbox")
        else if (options.type == 'radio')
            input(class='form-elem__radio' type='radio' name='form-elem__radio' checked=check)
            label(for="form-elem__radio")
        else if (options.type == 'search')
            - className = options.isError ? 'search--error': ''

            form(class='form-elem__search-form' action="")
                input(class='form-elem__search '+className  type=elType placeholder='Search' name="q")
                button(class='form-elem__search-btn')
        else if (options.type == 'select')
            .form-elem__select-wrpp    
                .form-elem__select-wrp    
                    input(class='form-elem__select' type='text' size=1 id='sel' placeholder='Choose An Option' readonly)
                    button(class='form-elem__select-lbl' for='sel') 
                ul(class='form-elem__select-list select-list--disabled')
                    li(class='form-elem__select-item') This is option 1
                    li(class='form-elem__select-item') This is option 2
                    li(class='form-elem__select-item') This is option 3
                    li(class='form-elem__select-item') This is option 4 
        else
            - className = 'form-elem__inp' 
            input(class= className type=elType placeholder= placeHolder )
            .form-elem__popper.form-elem__popper--error THANKS! 


