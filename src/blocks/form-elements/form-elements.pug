//-форма отправки сообщения
mixin form-elem(options)
    form(class="form-elem__message-form" action="")
        
        +form-elem__input({type: 'text'})
        +form-elem__input({type : 'email'})
        +form-elem__textarea({})
        +btn({isBig: true, title: 'submit'})


